        android:textScaleX=".85"/>

    <TextView
        android:id="@+id/mNQR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight=".01"
        android:text="N | Q | R | W"
        android:textAlignment="textEnd"
        android:textColor="#FFC400"
        android:textScaleX=".85"
