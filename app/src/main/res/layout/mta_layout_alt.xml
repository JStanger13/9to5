        android:id="@+id/statusShuttle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="test"
        android:textScaleX=".85"/>


